public class TestarCondicional {
    public static void main(String[] args) {
        int idade = 15;
        int quantidadePessoa = 2;

        if (idade >= 18) {
            System.out.println("Você tem " + idade + " anos. Já é maior de idade");
            System.out.println("Seja bem vindo!");
        } else {
            if(quantidadePessoa >= 2){
                System.out.println("Você tem " + idade + " anos. Se estiver acompanhado pode entrar" );
            }
            System.out.println("Menor de idade, não acompanhado, não pode entrar!");
        }
    }
}
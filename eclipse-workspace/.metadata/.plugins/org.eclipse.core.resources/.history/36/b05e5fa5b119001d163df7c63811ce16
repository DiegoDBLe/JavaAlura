public class Conta {
    private double saldo;
    private int agencia;
    private int numero;
    private Cliente titular;

    private static int total;

    public Conta(int agencia, int numero){
        total++;
        this.agencia = agencia;
        this.numero = numero;

    }
    public void deposita(double valor) {
        this.saldo += valor;
        msgTransfere(valor);
    }

    public void msgSaque(double valor){
        System.out.println("Saque efetuado com sucesso R$ "
                + valor + " reais. " +
                "\nNovo Saldo R$ " + this.saldo);
    }

    public void msgSaldoInsuficiente(double valor) {
        System.out.println("Você tentou sacar R$ " + valor +
                " reais.\nSaldo Insuficiente!"
                + "\nSaldo Disponivel: R$ " + this.saldo);
    }

    public void msgTransfere(double valor){
        System.out.println("Transferencia efetuado com sucesso no valor de " +
                "R$ " + valor + " reais. " +
                "\nNovo Saldo R$ " + this.saldo);
    }

    public boolean saca(double valor){
        if (this.saldo >= valor){
            this.saldo -= valor;
            this.msgSaque(valor);
            return true;
        }else {
            this.msgSaldoInsuficiente(valor);
            return false;
        }
    }
    public boolean transfere(double valor, Conta destino){
        if (this.saldo >= valor){
            this.saldo -= valor;
            destino.deposita(valor);
            this.msgTransfere(valor);
            return true;
        }
        msgSaldoInsuficiente(valor);
        return false;
    }

    public void getSaldo(){
        System.out.println("Saldo atualizado R$ " + this.saldo + " reais.");
    }

    public int getAgencia() {
        return this.agencia;
    }

    public int getNumero() {
        return this.numero;
    }

    public Cliente getTitular() {
        return this.titular;
    }

    public void setAgencia(int agencia) {
        if(agencia <= 0){
            System.out.println("Não pode criar Angencia com numero negativo");
            return;
        }
        this.agencia = agencia;
    }

    public void setNumero(int numero) {
        if(numero <= 0){
            System.out.println("Não pode valor menor que zero");
            return;
        }
        this.numero = numero;
    }

    public void setTitular(Cliente titular) {
        this.titular = titular;
    }

    public static int getTotal(){
        return total;
    }
}

public class TestaIR {
    public static void main(String[] args) {
        double salario = 2664.69;

        double isento = 1903.98;
        double segundaFaixaSalarial = 2826.65;
        double terceiraFaixaSalarial = 3751.05;
        double quartaFaixaSalarial = 4664.68;
        double quintaFaixaSalarial = 4664.69;

        double setePorcento = 0.075;
        double quinzePorcento = 0.15;
        double vinteEdoisEmeioPorcento = 0.225;
        double vinteSeteMeioProcento = 0.275;

        double descontoSetePorcento = salario * setePorcento;
        double descontoQuinzePorcento = salario * quinzePorcento;
        double descontoVinteDoisEmeioPorcento = salario * vinteEdoisEmeioPorcento;
        double descontoVinteSeteEmeioPorcento = salario * vinteSeteMeioProcento;


        if (salario <= isento) {
            System.out.println("Você é isento da dedução do IR");

        } else if (salario > isento && salario <= segundaFaixaSalarial) {

            double salarioLiquido = salario - descontoSetePorcento;
            System.out.println("Sua dedução é de 7,50% em reais R$ " + descontoSetePorcento + " Total Liquido R$ " + salarioLiquido);

        } else if (salario > segundaFaixaSalarial && salario <= terceiraFaixaSalarial) {

            double salarioLiquido = salario - descontoQuinzePorcento;
            System.out.println("Sua dedução é de 15% em reais R$ " + descontoQuinzePorcento + " Total Liquido R$ " + salarioLiquido);
            
        } else if (salario > terceiraFaixaSalarial && salario <= quartaFaixaSalarial) {

            double salarioLiquido = salario - descontoVinteDoisEmeioPorcento;
            System.out.println("Sua dedução é de 22,5% em reais R$" + descontoVinteDoisEmeioPorcento + " Total Liquido R$ " + salarioLiquido);
            
        } else {

            double salarioLiquido = salario - descontoVinteSeteEmeioPorcento;
            System.out.println("Sua dedução é de 27,5% em reais" + descontoVinteSeteEmeioPorcento + " Total Liquido R$ " + salarioLiquido);
        }
    }
}
package br.com.alura.gerenciador.servlet;

import java.io.IOException;

import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

/**
 * @Web /removeEmpresa
 */
public class RemoveEmpresaServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		// Lendo o parametro: e sempre retorna uma String. Precisamos passar para Integer atraves do parsInt
		String parametroId = request.getParameter("id"); 
		Integer id = Integer.valueOf(parametroId);
		
		System.out.println(id);
		
		// Ou seja, o parametro id passado no arquivo jsp ${empresa.id} o nosso servlet está conseguindo pegar esse id do parametro da URL.
		// Agora, precisamos apagar a empresa correspondente ao id.
		// Para isso vamos criar uma instancia do tipo Banco, simulando o banco de dados.
		// Também precisamos criar um método removeEmpresa(recebe o id da empresa como parametro e verifica se o ) que remove a empresa pelo id:
		
		Banco banco = new Banco();
		banco.removeEmpresa(id);
	}

}
